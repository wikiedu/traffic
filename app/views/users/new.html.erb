<div class="wrapper wrapper-content animated fadeInRight">
<div class="row" id="center">
    <div class="col-lg-7">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Sign Up<small>Simple SignUp</small></h5>
            </div>
            <div class="ibox-content">
                <div class="row">
                    <div class="col-sm-6 b-r"><h3 class="m-t-none m-b">Sign Up</h3>
                        <p>Sign up today for more experience.</p>
                      
                          <%= form_for @user, url: users_path, method: 'post' do |f| %>
                            <div class="form-group">
                              <%= f.label :username %>:
                              <%= f.text_field :username, placeholder: 'Your username', class: 'form-control' %>
                            </div>
                            <div class="form-group">
                              <%= f.label :email %>:
                              <%= f.email_field :email, placeholder: 'Enter Valid email',class: 'form-control' %>
                            </div>
                            <div class="form-group">
                              <%= f.label :password %>:
                              <%= f.password_field :password, placeholder: 'Your password',class: 'form-control' %>
                            </div>
                            <div class="form-group">
                              <%= f.label :password_confirmation %>:
                              <%= f.password_field :password_confirmation,placeholder: 'Confirm your password', class: 'form-control' %>
                            </div>
                            <%= f.submit class: 'btn btn-default'%>
                          <% end %>
                          <br>
                          <%= button_to('CANCEL', '/', method: :get, class: 'btn btn-danger') %>

                    </div>
                    <div class="col-sm-6"><h4>Not a member?</h4>
                        <p>You can create an account:</p>
                        <p class="text-center">
                            <a href=""><i class="fa fa-sign-in big-icon"></i></a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

<% content_for :javascript do %>

<script type="text/javascript">


$(function() {

    $('.i-checks').iCheck({
        checkboxClass: 'icheckbox_square-green',
        radioClass: 'iradio_square-green',
    });

});

</script>

<% end %>
