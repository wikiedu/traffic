<h1>Create a new Location</h1>
<div class="form-horizontal col-md-6">
  <%= form_for @location, url: client_locations_path(params[:client_id]) do |f| %>
    <div class="form-group">
      <%= f.label :name %>:
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :internal_code %>:
      <%= f.text_field :internal_code, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :direction %>:
      <%= f.text_field :direction, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :postal_code %>:
      <%= f.text_field :postal_code, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :hour_in %>:
      <%= f.time_field :hour_in, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :hour_out %>:
      <%= f.time_field :hour_out, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :contact %>:
      <%= f.text_field :contact, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :route %>:
      <%= f.text_field :route, class: 'form-control' %>
    </div>

    <%= f.submit class: 'btn btn-default'%>
  <% end %>
  <br>
  <%= button_to('CANCEL', client_locations_path(@client), method: :get, class: 'btn btn-danger') %>
</div>
